<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Settings</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="/profileSettings.css">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header'); %>

    <main>
        <section class="profiel">
            <div class="centerWrapper">
              <button type="button" class="fullscreenButton" onclick="enableEditing()">Bewerk instellingen</button>
            </div>

            <h2>Profiel</h2>
            <div class="formWrapper">
                <form action="/profile-settings" method="POST" enctype="multipart/form-data">

                    <div class="profilePhotoWrapper">
                    <div class="profilePhoto">
                        <% if (user.imagePath) { %>
                        <img src="<%= user.imagePath %>" alt="Profile Picture">
                        <% } else { %>
                        <span class="placeholder"></span>
                        <% } %>
                        <input type="file" id="profileUpload" name="profilePic" accept="image/*" disabled>
                    </div>
                    <label for="profileUpload" class="plusButton">+</label>
                    </div>

                    <div class="nameFields">
                    <div class="firstName">
                        <input type="text" name="firstName" placeholder="Voornaam" value="<%= user.firstName || '' %>" disabled />
                    </div>
                    <div class="lastName">
                        <input type="text" name="lastName" placeholder="Achternaam" value="<%= user.lastName || '' %>" disabled />
                    </div>
                    </div>

                    <div class="leeftijd">
                        <input type="number" name="age" placeholder="Leeftijd" value="<%= user.age || '' %>" disabled/><br>
                    </div>

                    <div class="geslacht">
                        <select name="eigenGeslacht" id="eigenGeslacht" disabled>
                            <option value="man" <%= user.geslacht === 'man' ? 'selected' : '' %>>Man</option>
                            <option value="vrouw" <%= user.geslacht === 'vrouw' ? 'selected' : '' %>>Vrouw</option>
                            <option value="anders" <%= user.geslacht === 'anders' ? 'selected' : '' %>>Anders</option>
                        </select>
                        </div>

                    <div class="bio">
                        <input type="text" name="bio" placeholder="Vertel iets over jezelf..." value="<%= user.bio || '' %>" disabled/><br>
                    </div>
            </div>
        </section>

        <section class="accountmanagement">
            <h2>Accountmanagement</h2>
            <div class="email">
                <input type="email" name="email" placeholder="E-mail" value="<%= user.email || '' %>" disabled/>
            </div>
        </section>

        <section class="concertvoorkeuren">
            <h2>Concertvoorkeuren</h2>
                <h3>Genres</h3>
                <ul class="genres">
                    <% genres.forEach(function(genre) { %>
                        <li>
                            <input
                            type="checkbox"
                            name="genres"
                            value="<%= genre %>"
                            id="genre_<%= genre %>"
                            <% if (selectedGenres.includes(genre)) { %> checked <% } %>
                            disabled
                            >
                            <label for="genre_<%= genre %>"><%= genre %></label>
                        </li>
                    <% }); %>
                </ul>
        </section>
       
        <section class="matchvoorkeuren">
            <h2>Matchvoorkeuren</h2>
                <h3>Leeftijd</h3>
                  <div class="container">
                    <div class="values" id="range-values">
                      <span id="range1"><%= user.preferences?.minAge || 18 %></span>
                      <span> &dash; </span>
                      <span id="range2"><%= user.preferences?.maxAge || 100 %></span>
                    </div>
                      <div class="sliderTrack"></div>
                      <input type="range" min="18" max="100" value="<%= user.preferences?.minAge || 18 %>" id="slider-1" name="minAge" oninput="slideOne()" disabled>
                      <input type="range" min="18" max="100" value="<%= user.preferences?.maxAge || 100 %>" id="slider-2" name="maxAge" oninput="slideTwo()" disabled>
                    </div>

                <h3>Geslacht</h3>
                   <div class="geslachtKeuze">
                    <input type="radio" name="geslachtVoorkeur" id="man" value="man"
                        <%= user.preferences?.geslachtVoorkeur === 'man' ? 'checked' : '' %> disabled>
                    <label for="man">Man</label>

                    <input type="radio" name="geslachtVoorkeur" id="vrouw" value="vrouw"
                        <%= user.preferences?.geslachtVoorkeur === 'vrouw' ? 'checked' : '' %> disabled>
                    <label for="vrouw">Vrouw</label>

                    <input type="radio" name="geslachtVoorkeur" id="anders" value="anders"
                        <%= user.preferences?.geslachtVoorkeur === 'anders' ? 'checked' : '' %> disabled>
                    <label for="anders">Anders</label>

                    <input type="radio" name="geslachtVoorkeur" id="geenVoorkeur" value="nvt"
                        <%= user.preferences?.geslachtVoorkeur === 'nvt' ? 'checked' : '' %> disabled>
                    <label for="geenVoorkeur">Geen voorkeur</label>
                    </div>
                    <br>

                <h3>Taal</h3>
                     <div class="taalKeuze">
                            <input type="radio" name="taal" id="nl" value="nl"
                            <%= selectedTaal === 'nl' ? 'checked' : '' %> disabled>
                            <label for="nl">Nederlands</label>

                            <input type="radio" name="taal" id="en" value="en"
                            <%= selectedTaal === 'en' ? 'checked' : '' %> disabled>
                            <label for="en">English</label>

                            <input type="radio" name="taal" id="nvt" value="nvt"
                            <%= selectedTaal === 'nvt' ? 'checked' : '' %> disabled>
                            <label for="nvt">Geen voorkeur</label>

                            <input type="radio" name="taal" id="else" value="anders"
                            <%= selectedTaal !== 'nl' && selectedTaal !== 'en' && selectedTaal !== 'nvt' ? 'checked' : '' %> disabled>
                            <label for="else">Anders</label>

                            <input type="text" id="taalAndersInput" name="taalAnders" placeholder="Typ een taal..."
                            value="<%= taalAnders || '' %>"style="<%= selectedTaal !== 'nl' && selectedTaal !== 'en' && selectedTaal !== 'nvt' ? 'display:inline-block;' : 'display:none;' %>">
                     </div>
        </section>


