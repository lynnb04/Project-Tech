<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/detail.css">
</head>
<body>
    <%- include('../partials/header'); %>
    <main>
        <section>
          <article>
            <ul>
              <% events.forEach(event => { %>
                <li>
                  <div class="card-img-wrapper">
                    <img src="<%= event.images[2].url %>" alt="Foto van event" />
                    <% 
                      const dateParts = event.dates.start.localDate.split("-");
                      const day = dateParts[2];
                      const month = new Date(event.dates.start.localDate).toLocaleString('nl-NL', { month: 'short' });
                    %>
                    <div class="card-date">
                      <span class="day"><%= day %></span>
                      <span class="month"><%= month %></span>
                    </div>
                  </div>
      
                  <h1><%= event.name %></h1>
                  <p class="time-tag"><%= event.dates.start.localTime ? event.dates.start.localTime.slice(0, 5) : 'Tijd onbekend' %></p>
                  <p><strong><%= event._embedded.venues[0].name %></strong>,</p>
                  <p><%= event._embedded.venues[0].city.name %></p>
      
                  <div class="genre-container">
                    <% const genre = event.classifications?.[0]?.genre?.name; %>
                    <% const subgenre = event.classifications?.[0]?.subGenre?.name; %>
      
                    <% if (genre) { %>
                      <div class="genre-tag"><%= genre %></div>
                    <% } %>
      
                    <% if (subgenre && subgenre !== genre) { %>
                      <div class="subgenre-tag"><%= subgenre %></div>
                    <% } %>
                  </div>
      
                  <% if (event.url) { %>
                    <p>
                      <a class="tickets" href="<%= event.url %>" target="_blank">Bekijk beschikbare tickets</a>
                    </p>
                  <% } %>
                </li>
              <% }) %>
            </ul>
          </article>
        </section>
      </main>
      
    
    <%- include('../partials/footer'); %>
</body>
</html>